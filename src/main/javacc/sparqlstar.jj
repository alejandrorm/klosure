    }
  }
}

Path PathElt():
{
  Path p;
  int mode = -1;
}
{
  p = PathPrimary() ( mode = PathMod())? {
    switch(mode) {
      case -1:
        return p;
      case 0:
        return new ZeroOrMorePath(p);
      case 1:
        return new ZeroOrOnePath(p);
      case 2:
        return new OneOrMorePath(p);
      default:
        throw new RuntimeException("Invalid path mode");
    }
  }
}

