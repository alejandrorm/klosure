LiteralId RDFLiteral():
{
  String s;
  Token t;
  String lang = null;
  IRI i = null;
}
{
  s = String() ( t = <LANGTAG> { lang = t.image; }| ( "^^" i = iri()) ) ? { return new LiteralId(s, lang, i); }
}

