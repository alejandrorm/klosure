Path PathAlternative():
{
  List<Path> paths = new ArrayList<>();
  Path p;
}
{
  p = PathSequence() { paths.add(p); }( "|" p = PathSequence() { paths.add(p); }) * {

    if (paths.size() == 1) {
      return paths.get(0);
    } else {
      return new AlternatePath(paths);
    }
  }
}

Path PathSequence():
